<%= form_for(@uf) do |f| %>
  <% if @uf.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@uf.errors.count, "error") %> não foi possível salvar o cadastro da UF:</h2>

      <ul>
      <% @uf.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   	<fieldset>
	  <legend>Cadastro de UF:</legend>
	<div class="cadastro">
	  <%= f.label :nome %>:

	</div>
	<div class="cadastro">
	  <%= f.text_field :nome %>

	</div>
	<div class="cadastro">
	  <%= f.label :sigla %>:

	</div>
	<div class="cadastro">
	  <%= f.text_field :sigla %>

	</div>
	<div class="actions">
    <%= f.submit %> 	<%= link_to '', ufs_path, :class => 'voltar' %>
	
  </div>
	  </fieldset>



 
<% end %>
